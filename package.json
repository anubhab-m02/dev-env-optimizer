{
  "name": "dev-env-optimizer",
  "version": "1.0.0",
  "description": "Desktop app to analyze and optimize your development environment.",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently -k \"npm run start --prefix client\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npm run build --prefix client && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.14.1",
    "dotenv": "^16.4.5",
    "electron-is-dev": "^3.0.1",
    "systeminformation": "^5.22.11"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dev.optimizer",
    "productName": "DevEnvOptimizer",
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}
